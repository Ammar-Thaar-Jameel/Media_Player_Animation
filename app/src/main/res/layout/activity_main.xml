<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image_View_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/animation"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imag_View_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_baseline_play_arrow_24"
        android:backgroundTint="@color/white"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="@id/image_View_background"
        app:layout_constraintLeft_toLeftOf="@id/image_View_background"
        app:layout_constraintRight_toRightOf="@id/image_View_background"
        app:layout_constraintTop_toTopOf="@id/image_View_background" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:text="my video title"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_View_background" />

</androidx.constraintlayout.motion.widget.MotionLayout>